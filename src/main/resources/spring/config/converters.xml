		<bean class="converters.TrainerToStringConverter"/>
		<bean class="converters.StringToTrainerConverter"/>
		
		<bean class="converters.TrainingToStringConverter"/>
		<bean class="converters.StringToTrainingConverter"/>
				
	</util:list>
	
</beans>