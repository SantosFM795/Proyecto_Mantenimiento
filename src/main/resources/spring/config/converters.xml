<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<!-- 
			Add your own converters using entries of the following form: 
			<bean class="converters.Class1ToClass2" /> 
		-->
		<bean class="converters.ActivityToStringConverter"/>
		<bean class="converters.StringToActivityConverter"/>
		
		<bean class="converters.ActorToStringConverter"/>
		<bean class="converters.StringToActorConverter"/>
		
		<bean class="converters.AdministratorToStringConverter"/>
		<bean class="converters.StringToAdministratorConverter"/>
		
		<bean class="converters.AnnotationToStringConverter"/>
		<bean class="converters.StringToAnnotationConverter"/>
		
		<bean class="converters.AuthorityToStringConverter"/>
		<bean class="converters.StringToAuthorityConverter"/>
		
		<bean class="converters.CreditCardToStringConverter"/>
		<bean class="converters.StringToCreditCardConverter"/>
		
		<bean class="converters.CustomerToStringConverter"/>
		<bean class="converters.StringToCustomerConverter"/>
		
		<bean class="converters.CVToStringConverter"/>
		<bean class="converters.StringToCVConverter"/>
		
		<bean class="converters.GymToStringConverter"/>
		<bean class="converters.StringToGymConverter"/>
		
		<bean class="converters.ManagerToStringConverter"/>
		<bean class="converters.StringToManagerConverter"/>
		
		<bean class="converters.SigningToStringConverter"/>
		<bean class="converters.StringToSigningConverter"/>
		
		<bean class="converters.SocialMediaToStringConverter"/>
		<bean class="converters.StringToSocialMediaConverter"/>
		
		<bean class="converters.StepToStringConverter"/>
